        <%- include('../partials/navbar.ejs') %>

            <div class="create-blog content">

                <form action="/blogs" method="POST">
                    <h1>Share Experience</h1>
                    <label for="title">Title *
                    </label>
                    <input type="text" id="title" required name="title">
                    <br>
                    <label for="snippet">Company * </label>
                    <input type="text" id="snippet" name="snippet" required>
                    <br>
                    <label for="body">Write Here *</label>
                    <textarea id="body" cols="10" rows="2" required name="body"></textarea>
                    <br>

                    <button>Submit</button>
                    <input type="text" class="invisible" name="author" value="<%=user._id %>">
                </form>
            </div>
